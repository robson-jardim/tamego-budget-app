{
    "name": "functions",
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "serve": "firebase serve --only functions",
        "shell": "firebase experimental:functions:shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "setConfig": "firebase functions:config:get > .runtimeconfig.json",
        "dev": "npm run setConfig && concurrently --kill-others \"npm run watch\" \"npm run shell\""
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "cors": "^2.8.4",
        "express": "^4.16.2",
        "express-json-validator-middleware": "^1.2.1",
        "firebase-admin": "~5.8.1",
        "firebase-functions": "^0.8.1",
        "stripe": "^5.4.0"
    },
    "devDependencies": {
        "@types/express": "^4.11.1",
        "concurrently": "^3.5.1",
        "typescript": "^2.6.2"
    },
    "main": "dist/functions/src/index.js",
    "private": true
}
