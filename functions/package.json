        "express": "^4.16.2",
        "express-json-validator-middleware": "^1.2.1"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/express": "^4.11.0",
        "@types/mocha": "^2.2.47",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "concurrently": "^3.5.1",
        "mocha": "^5.0.0",
        "nyc": "^11.4.1",
        "sinon": "^4.2.2",
        "ts-node": "^4.1.0",
        "typescript": "^2.6.2"
    },
