{
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "public": "dist",
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
	"functions": {
		"source": "functions",
		"predeploy": "npm --prefix functions run build"
	}
}
